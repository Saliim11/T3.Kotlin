<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#eeeeee">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">





    <include layout="@layout/toolbar"/>

    <TextView
            android:id="@+id/player_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Player 1 Turn"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textStyle="bold"
            android:fontFamily="casual"/>


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="409dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/board"
                android:adjustViewBounds="true"
                android:id="@+id/imageView"/>

        <ImageView
                android:id="@+id/btn_1"
                android:layout_width="@dimen/x_o_width"
                android:layout_height="@dimen/x_o_height"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_marginTop="@dimen/image_margin"
                android:layout_gravity="start|top"
                android:onClick="t3Click"/>


        <ImageView
                android:id="@+id/btn_2"
                android:layout_width="@dimen/x_o_width"
                android:layout_height="@dimen/x_o_height"
                android:layout_marginTop="@dimen/image_margin"
                android:layout_gravity="center|top"
                android:onClick="t3Click"/>


        <ImageView
                android:id="@+id/btn_3"
                android:layout_width="@dimen/x_o_width"
                android:layout_height="@dimen/x_o_height"
                android:layout_marginRight="@dimen/image_margin"
                android:layout_marginTop="@dimen/image_margin"
                android:layout_gravity="end|top"
                android:onClick="t3Click"/>


        <ImageView
                android:id="@+id/btn_4"
                android:layout_width="@dimen/x_o_width"
                android:layout_height="@dimen/x_o_height"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_gravity="center_vertical|start"
                android:onClick="t3Click"/>


        <ImageView
                android:id="@+id/btn_5"
                android:layout_width="@dimen/x_o_width"
                android:layout_height="@dimen/x_o_height"
                android:layout_gravity="center"
                android:onClick="t3Click"/>


        <ImageView
                android:id="@+id/btn_6"
                android:layout_width="@dimen/x_o_width"
                android:layout_height="@dimen/x_o_height"
                android:layout_marginRight="@dimen/image_margin"
                android:layout_gravity="center_vertical|end"
                android:onClick="t3Click"/>


        <ImageView
                android:id="@+id/btn_7"
                android:layout_width="@dimen/x_o_width"
                android:layout_height="@dimen/x_o_height"
                android:layout_marginLeft="@dimen/image_margin"
                android:layout_marginBottom="@dimen/image_margin"
                android:layout_gravity="start|bottom"
                android:onClick="t3Click"/>


        <ImageView
                android:id="@+id/btn_8"
                android:layout_width="@dimen/x_o_width"
                android:layout_height="@dimen/x_o_height"
                android:layout_marginBottom="@dimen/image_margin"
                android:layout_gravity="center|bottom"
                android:onClick="t3Click"/>


        <ImageView
                android:id="@+id/btn_9"
                android:layout_width="@dimen/x_o_width"
                android:layout_height="@dimen/x_o_height"
                android:layout_marginRight="@dimen/image_margin"
                android:layout_marginBottom="@dimen/image_margin"
                android:layout_gravity="bottom|end
"
                android:onClick="t3Click"/>

    </FrameLayout>

    </LinearLayout>


    <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/btn_reset_margin"
            android:text="Reset"
            android:layout_gravity="bottom"/>

</FrameLayout>